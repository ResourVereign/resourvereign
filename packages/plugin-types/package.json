{
  "name": "@resourvereign/plugin-types",
  "private": false,
  "version": "0.0.2",
  "author": {
    "name": "Dani Lupi√≥n",
    "email": "danilupion@gmail.com"
  },
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    "./*": "./dist/*"
  },
  "scripts": {
    "build": "if ! [[ $NOCLEAN = \"1\" ]]; then rm -rf ./dist; fi && tsc",
    "build:watch": "export NOCLEAN=1 && nodemon --watch src -e ts,json --exec 'yarn build'",
    "build:check": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint:fix": "eslint -c .eslintrc.json 'src/**/*.ts' --fix",
    "lint": "eslint -c .eslintrc.json 'src/**/*.ts'",
    "prettify": "prettier --write  \"./src/**/*.{ts,tsx,json}\""
  },
  "dependencies": {
    "@slangy/common": "^2.0.1",
    "jtd": "^0.1.1",
    "type-fest": "^4.10.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vitest": "^0.3.22",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn prettify",
      "yarn lint:fix --max-warnings=0",
      "vitest related --run"
    ]
  }
}
